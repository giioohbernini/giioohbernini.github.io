.blog-post-comments
  max-width: 50rem
  margin: 3em auto
  padding: 1em
  box-shadow: 0px 0px 6px 2px rgba(0, 0, 0, 0.26)

.blog-post
  margin: 0 auto
  padding-top: 2em

  h1, h2, h3, h4, h5, h6, ul, ol, iframe, p, figure
    max-width: 50rem
    margin-left: auto
    margin-right: auto
    margin: 0 auto 1.875rem
    display: block

  ul
    padding-left: 1.3em;

  h1, h2, h3
    color: #354b72

  @media mq-mobile
    margin: 1em
