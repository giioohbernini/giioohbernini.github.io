.blog-post-comments
  max-width: 50rem
  margin: 3em auto
  padding: 1em
  box-shadow: 0px 0px 6px 2px rgba(0, 0, 0, 0.26)

.blog-post
  margin: 0 auto
  padding-top: 2em
  

  h1, h2, h3, h4, h5, h6, ul, ol, iframe, p, figure, img, .gist
    color: #353535
    display: block
    font-family: 'Open Sans',sans-serif;
    font-size: 1.125rem
    line-height: 2
    max-width: 50rem
    margin-left: auto
    margin-right: auto
    margin: 0 auto 1.875rem

  img
    max-width: 100%
    width: 100%

  ul
    padding-left: 1.3em;

  h1, h2, h3
    color: #354b72

  h2
    font-size: 1.375rem
    line-height: 1.4

    @media mq-normal
      font-size: 2.188rem

  a
    border-bottom: 3px dotted #364b73
    color: #364b73
    transition: all .25s ease

    &:hover
      background-color: #364b73
      border-bottom: 3px dotted #ffffff
      color: #ffffff

  li
    margin: 1em 0

  @media mq-mobile
    margin: 0 1em
