ul.category-list
  padding: 1em;
  margin-bottom: 5em

.pageTitle
  font-size: 2.5rem
  text-align: center
  padding: 1em

.category-list-item
  display: block
  padding: 1em 0
  border-bottom: solid 1px #b8b8b8
  font-size: 2rem
  text-transform: capitalize
  color: #656565
  border-top-left-radius: 10px
  border-top-right-radius: 10px
  transition: all 1s

  &:hover
    color: #354b72
    background-color: #f4f4f4
    padding: 1em 0 1em 20px;
